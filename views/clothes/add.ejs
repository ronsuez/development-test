<div class="row">
  <div class="large-12 columns">
    <h1>Add some clothes!!</h1>
  </div>
</div>

<br/>

<div class="row">
  <div class="large-12 columns">
    <form>
      <div class="row">
        <div class="large-12 columns">
          <label>Clothing Name
            <input type="text" placeholder="" />
          </label>
        </div>
      </div>
      <div class="row">
        <div class="large-4 columns">
          <label>Clothing Type
            <select>
              <% _.each(c, function(ct){ %>
              <option value="<%= ct.id %>>Husker</option>
              <option value="starbuck">Starbuck</option>
              <option value="hotdog">Hot Dog</option>
              <option value="apollo">Apollo</option>
            </select>
          </label>
        </div>
        <div class="left large-4 columns">
          <label>Brand
            <select>
              <option value="husker">Husker</option>
              <option value="starbuck">Starbuck</option>
              <option value="hotdog">Hot Dog</option>
              <option value="apollo">Apollo</option>
            </select>
          </label>
        </div>

      </div>
      <br/>
      <div class="row">
        <div class="right large-4 columns">
          <input type="submit" class="right button success" value="Save"/>
        </div>
      </div>
    </form>
  </div>
</div>


